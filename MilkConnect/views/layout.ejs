<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MilkConnect</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            color: #333;
        }
        
        .container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            text-align: center;
        }
        
        h1 {
            font-size: 2.5rem;
            margin-bottom: 2rem;
            color: #222;
            text-transform: uppercase;
            letter-spacing: 2px;
        }
        
        .button-container {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            width: 100%;
            max-width: 300px;
            margin: 0 auto;
        }
        
        button {
            background-color: #fff;
            color: #222;
            border: 2px solid #222;
            padding: 1rem 2rem;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        button:hover {
            background-color: #222;
            color: #fff;
        }
        
        @media (max-width: 600px) {
            h1 {
                font-size: 2rem;
            }
            
            .button-container {
                max-width: 250px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to MilkConnect</h1>
        
        <div class="button-container">
            <button id="register">Register</button>
            <button id="read">Read all Users</button>
            <button id="update">Update</button>
            <button id="delete">Delete</button>
        </div>
    </div>
    
    <script>
        // You can add functionality to these buttons later
        const BASE_URL = '<%= BASE_URL %>'; 

        document.getElementById('register').addEventListener('click', () => {
            window.location.href = `${BASE_URL}/register`; // Redirect to register page
        }); 
        
        document.getElementById('read').addEventListener('click', () => {
            window.location.href = `${BASE_URL}/readSeller`; // Redirect to read page
        });
        
        document.getElementById('update').addEventListener('click', () => {
            window.location.href = `${BASE_URL}/update`; // Redirect to update page
        });
        
        document.getElementById('delete').addEventListener('click', () => {
            window.location.href = `${BASE_URL}/delete`; // Redirect to delete page
        });
    </script>
</body>
</html>